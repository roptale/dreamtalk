<% @chatrooms.each do |chatroom| %>
  <div class="card mb-4 shadow-sm border-light">
    <div class="card-body">
      <h5 class="card-title font-weight-bold">
        <%= chatroom.receiver == current_user ? chatroom.creator.first_name : chatroom.receiver.first_name %>
      </h5>
      <p class="card-text text-muted">Click below to enter the chatroom</p>
      <%= link_to "Enter Chatroom", chatroom_path(chatroom), class: "btn btn-outline-primary btn-lg" %>
    </div>
  </div>
<% end %>
