<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
  <h2 class="text-center mb-4">Chatroom</h2>

  <!-- Messages Section -->
  <div id="messages"
       class="mb-4 p-3 border rounded bg-light"
       style="height: 300px; overflow-y: scroll;"
       data-controller="video"
       data-video-target="messagesContainer">
    <% @chatroom.messages.each do |message| %>
      <p class="message <%= 'current-user' if message.user == current_user %>">
        <strong><%= message.user.first_name %>:</strong> <%= message.content %>
      </p>
    <% end %>
  </div>

  <!-- New Message Form -->
  <%= form_with model: [@chatroom, @message], local: true, class: "d-flex align-items-center mb-4", data: { action: "submit->video#sendMessage" } do |form| %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <div class="form-group flex-grow-1 me-2">
      <%= form.label :content, "New Message", class: "form-label" %>
      <%= form.text_field :content, class: "form-control", placeholder: "Type your message here...", data: { video_target: "messageInput" } %>
    </div>
    <%= form.submit "Send", class: "btn btn-primary" %>
  <% end %>

  <!-- Video Call Section -->
  <div id="container" class="border rounded p-3 bg-light" data-video-target="videoContainer">
    <form id="login" class="mb-3" data-action="submit->video#joinOrLeaveRoom">
      <input type="hidden" id="username" name="username" value="<%= current_user.first_name %>">
      <button type="submit" id="joinOrLeaveRoom" class="btn btn-success w-100 mb-10" data-video-target="joinButton">
        Join Video Call
      </button>
    </form>


    <div id="participantsContainer" class="d-flex justify-content-between">
      <div id="localParticipant" class="text-center flex-fill me-2">
        <h5>Your Video</h5>
        <div id="localVideoTrack" data-video-target="localVideoTrack"></div>
      </div>

      <!-- Remote participants video -->
      <div id="remoteParticipants" class="text-center flex-fill ms-2" data-video-target="remoteParticipants">
        <h5>Other Participants</h5>
      </div>
    </div>
  </div>
</div>

<script src="https://sdk.twilio.com/js/video/releases/2.14.0/twilio-video.min.js"></script>
