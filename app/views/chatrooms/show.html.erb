<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
  <h2 class="text-center mb-4">Chatroom</h2>

  <!-- Messages Section -->
  <div id="messages" class="mb-4 p-3 border rounded bg-light" style="height: 300px; overflow-y: scroll;">
    <% @chatroom.messages.each do |message| %>
      <p><strong><%= message.user.first_name %>:</strong> <%= message.content %></p>
    <% end %>
  </div>

  <!-- new message -->
  <%= form_with model: [@chatroom, @message], local: true, class: "d-flex align-items-center mb-4" do |form| %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <div class="form-group flex-grow-1 me-2">
      <%= form.label :content, "New Message", class: "form-label" %>
      <%= form.text_field :content, class: "form-control", placeholder: "Type your message here..." %>
    </div>
    <%= form.submit "Send", class: "btn btn-primary" %>
  <% end %>

  <!-- video call -->
  <div id="container" class="border rounded p-3 bg-light">
    <form id="login" class="mb-3">
      <input type="hidden" id="username" name='username' value="<%= current_user.first_name %>">
      <button type="submit" id="joinOrLeaveRoom" class="btn btn-success w-100 mb-10">Join Video Call</button>
    </form>

    <div id="participantsContainer" class="d-flex justify-content-between">
      <div id="localParticipant" class="text-center flex-fill me-2">
        <h5>Your Video</h5>
        <div id="localVideoTrack"></div>
      </div>

      <!-- remote articipants video -->
      <div id="remoteParticipants" class="text-center flex-fill ms-2">
        <h5>Other Participants</h5>

      </div>
    </div>
  </div>
</div>

<script src="https://sdk.twilio.com/js/video/releases/2.14.0/twilio-video.min.js"></script>
<script src="/application.js"></script>
